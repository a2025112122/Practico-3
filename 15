#include <stdio.h>
#include <unistd.h>
int main()
{
int hh=0,mm=0,ss=0;

while (1){
    printf("%02d:%02d:%02d\n",hh,mm,ss);
    sleep(1);
    ss++;
    if(ss==60){
        ss=0;
        mm++;
    }
    if(mm==60){
        mm=0;
        hh++;
    }
    if(hh==24){
        hh=0;
    }
    }

    return 0;
}
